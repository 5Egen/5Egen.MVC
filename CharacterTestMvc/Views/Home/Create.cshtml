@model CharacterTestMvc.ViewModels.CreateViewModel
@{
    ViewBag.Title = "Create";
}

<div>
    <h1>Create Character</h1>

    @Html.DropDownList("Alignments", Model.getAlignmentNames(), new { @class = "form-control", @id="ddlAlignment"})

    @foreach (var al in Model.AllAlignments)
    {
        <div id = @String.Concat("AL", al.AlignmentId) class="well hidden">
            <p>@al.AlignmentDescription</p>
        </div>
    }
    
</div>

@section scripts {
<script>
    $(document).ready(function () {
        var prevID = "";
        $("#ddlAlignment").change(function () {
            var selectedID = $('#ddlAlignment').val();
            $("#" + selectedID).removeClass("hidden");
            $("#" + prevID).addClass("hidden");
            prevID = selectedID;
        });
    });
</script>
}